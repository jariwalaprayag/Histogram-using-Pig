A = LOAD '$P' USING PigStorage(',') AS (red:Int, blue:Int, green:Int);
R = GROUP A BY red;
B = GROUP A BY blue;
G = GROUP A BY green;
RED = FOREACH R GENERATE 1 AS I, ($0), COUNT($1);
BLUE = FOREACH B GENERATE 2 AS I, ($0), COUNT($1);
GREEN = FOREACH G GENERATE 3 AS I, ($0), COUNT($1);
TEMP = UNION RED,BLUE,GREEN;
OP = GROUP TEMP BY 1;
O = FOREACH OP GENERATE FLATTEN(TEMP);
STORE O INTO '$O' USING PigStorage(' ');
